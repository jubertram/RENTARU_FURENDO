<div class="container">
<h1 class="my-5 text-center" style="color: #E6EBEE;">Rent a furendo</h1>

<div style="display: flex; justify-content: center; color: #E6EBEE; font-family: montserrat; ">
<%= simple_form_for [@partner, @appointment], data: { controller: 'flatpickr' } do |f|%>
<%= f.input :start_time, as: :string, input_html: { data: { flatpickr_target: "startTime" } } %>
<%= f.input :end_time, as: :string, input_html: { data: { flatpickr_target: "endTime" } } %>
<%= f.submit "Rent #{@partner.first_name}!", class:'create-partner-button btn-rent link-index-button btn-appointment' %>
<% end %>
</div>

<%= link_to "Back to main", partners_path, class:'link-index-button btn-back btn-appointment', style: "color: #344F73; font-family: montserrat;" %>
</div>

<%= render 'shared/footer'%>
