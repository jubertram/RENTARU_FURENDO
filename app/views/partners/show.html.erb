<div class="card-trip">
<% if @partner.photo_url.attached? %>
<%= cl_image_tag @partner.photo_url.key, height: 300, width: 400, crop: :fill %>
<% end %>
  <div class="card-trip-infos">
    <div>
      <h2><%= @partner.first_name %> <%= @partner.last_name %></h2>
      <p>Gender: <%= @partner.gender %></p>
      <p>Address: <%= @partner.address %></p>
      <p>Temperament: <%= @partner.temperament %></p>
      <p>Interest: <%= @partner.interest %></p>
      <p>Age: <%= @partner.age %></p>
    </div>
    <h2 class="card-trip-pricing">Dispo combien de tmp ?</h2>
  </div>
</div>

<%= link_to '⬅', partners_path, class: "btn btn-ghost" %>
<%= link_to "✍️", edit_partner_path(@partner), class: "btn btn-ghost" %>
<%= link_to "+ Rent #{@partner.first_name}", new_partner_appointment_path(@partner), class:"text-decoration-none text-dark" %>
